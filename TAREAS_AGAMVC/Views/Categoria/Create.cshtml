@model TAREAS_AGAMVC.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h3>Nueva Categoria</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCat" class="control-label">Nombre</label>
                <input asp-for="NombreCat" class="form-control" />
                <span asp-validation-for="NombreCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anterior</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
